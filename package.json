{
  "name": "pistolet",
  "version": "0.3.0",
  "description": "EventSource mocking tool",
  "main": "dist/pistolet.js",
  "typings": "dist/main.d.ts",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "rollup --config rollup.config.js",
    "start": "rollup --config rollup.config.js --watch",
    "test": "jest --coverage",
    "lint": "npm run lint:src && npm run lint:test",
    "lint:src": "tslint --config tslint.json --format stylish 'src/**/*.ts'",
    "lint:test": "tslint --config test/tslint.json --format stylish 'test/**/*.ts'",
    "prepublish": "npm run-script build"
  },
  "author": "Emmanuel Bourgerie <manu@bourgerie.fr>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FrenchHipster/pistolet.git"
  },
  "homepage": "https://github.com/FrenchHipster/pistolet",
  "devDependencies": {
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.0",
    "@types/jasmine": "^2.8.11",
    "jasmine-core": "^3.3.0",
    "jest": "^23.6.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.67.0",
    "rollup-plugin-typescript2": "^0.17.2",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "tslint-jasmine-rules": "^1.5.1",
    "typescript": "^3.1.6"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "express": "^4.16.4"
  }
}
